#MEDIA
#Play-Pause
"playerctl play-pause"
Mod4+Down

#next
"playerctl next"
Mod4+Right

#previous
"playerctl previous"
Mod4+Left

#stop
"playerctl stop"
Mod4+Up

#Play-Pause-spotify
"playerctl -p spotify play-pause"
Shift+Mod4+Down

#next-spotify
"playerctl -p spotify next"
Shift+Mod4+Right

#previous-spotify
"playerctl -p spotify previous"
Shift+Mod4+Left

#stop-spotify
"playerctl -p spotify stop"
Shift+Mod4+Up

# Increase volume
#"pactl set-sink-volume 0 +5"
"pamixer -i 5"
   XF86AudioRaiseVolume

# Decrease volume
#"pactl set-sink-volume 0 -5"
"pamixer -d 5"
   XF86AudioLowerVolume

# Mute volume
#"pactl set-sink-mute 0 toggle"
"pamixer -t"
   XF86AudioMute

# Mute volume Alt version
#"pactl set-sink-mute 0 toggle"
"pamixer -t"
   Control+Shift+Mod4+Down

# Mute mic
#"pactl set-source-output-mute 0 toggle"
"amixer set Capture toggle"
   XF86AudioMicMute

# Increase backlight
#"xbacklight -inc 10"
"brightnessctl s +10%"
   XF86MonBrightnessUp

# Decrease backlight
#"xbacklight -dec 10"
"brightnessctl s 10%-"
   XF86MonBrightnessDown

